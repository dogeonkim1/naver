package day1212;

import java.util.Date;

public class Pr6Date {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Date today=new Date();
		
		int curYear=today.getYear()+1900;
		int curMonth=today.getMonth()+1;
		int curDate=today.getDate();
		
		System.out.println("오늘은"+curYear+"년"+curMonth+"월"+curDate+"일 입니다.");
		
		//요일
		int curDay=today.getDay();
		
		char week=
				curDay == 0 ? '일요일':
				curDay == 1 ? '월요일':
				curDay == 2 ? '화요일':
				curDay == 3 ? '수요일':
				curDay == 4 ? '목요일':
				curDay == 5 ? '금요일':'토요일';
		System.out.println("오늘은"+curDay+" 입니다.");
					
		

	}

}
